<div id="form">
  <h2>Signup</h2>

  {{#if errorMessage}}
    <p class="error">
      {{errorMessage}}
    </p>
  {{/if}}


  <form action="/signup" method="POST">
    <label> Email
      <input type="email" name="email" placeholder="rockstar@ironhack.com" required />
    </label>

    <label> Password
      <input type="password" name="password" placeholder="********" required />
    </label>

    <button type="submit">Create account</button>

  </form>

  <p>
    Do you have an account? Click <a href="/login">here</a> to login.
  </p>

</div>
